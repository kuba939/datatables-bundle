{% spaceless %}

if (typeof dTables === 'undefined') { var dTables = { "tables": {}, "keys": [] };}
jQuery(document).ready(function() {
    dTables.tables.{{ rawParams['id'] }} = jQuery('#{{ rawParams['id'] }}').dataTable({{ params|json_encode(constant('JSON_HEX_QUOT'))|convertFunctions|raw }});
    dTables.keys.push('{{ rawParams['id'] }}');
{% if rawParams['twigVars'] is defined and rawParams['twigVars']['filterForm'] is defined %}
    var anchor = jQuery('form.form-table-header th.header-filter span.anchor');
    anchor.on('click', function() {
        var th    = jQuery(this).closest('th.header-filter');
        var modal = th.find('div.header-filter-form');
        modal.removeClass('hidden');
        modal.show();
    });{% endif %}});
{% endspaceless %}
